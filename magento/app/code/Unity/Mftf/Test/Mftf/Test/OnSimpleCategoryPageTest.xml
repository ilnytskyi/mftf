<?xml version="1.0" encoding="UTF-8"?>
<tests xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/testSchema.xsd">
    <test name="OnSimpleCategoryPageTest">
        <annotations>
            <features value="Unity"/>
            <stories value="Go to category page"/>
            <title value="Go to the cat page"/>
            <description value="User should be able to open a simple cat page"/>
            <severity value="CRITICAL"/>
            <testCaseId value="UNITY-0001"/>
            <group value="unity"/>
        </annotations>
        <before>
            <actionGroup ref="LoginToAdminPanel" stepKey="loginAsAdmin"/>
            <createData entity="unitySimpleCategory1" stepKey="createSimpleCategory"/>
            <amOnPage url="/admin/catalog/category/index" stepKey="reloadCategories"/>
            <click selector="div#extdd-5" stepKey="secondChildCategory"/>
            <waitForPageLoad stepKey="waitForCategoryTreeLoad"/>
            <see userInput="Unity Category 1" stepKey="confirmCategoryCreated" />
        </before>
        <after>
            <amOnPage url="/admin/catalog/category/index" stepKey="toCategoryPagesToDelete"/>
            <click selector="div#extdd-5" stepKey="secondChildCategoryDelete"/>
            <waitForPageLoad stepKey="waitForCategoryTreeLoadDelete"/>
            <see userInput="Unity Category 1" stepKey="confirmCategoryCreatedDelete" />
            <click selector="#delete" stepKey="removeCreatedCategory"/>
            <click selector=".confirm .action-primary.action-accept" stepKey="confirmDelete"/>
        </after>
        <amOnPage url="/" stepKey="goToHomePage"/>
        <!--        <amOnPage url="/admin/catalog/category/edit/id/$$createSimpleCategory.return[val]$$/" stepKey="amOnHomePage"/>-->
        <see userInput="Unity Category 1" stepKey="finish" />
        <wait stepKey="waitBeforeCloseTest" time="5"/>
    </test>
</tests>
