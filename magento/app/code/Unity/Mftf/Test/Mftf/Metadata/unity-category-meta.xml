<?xml version="1.0" encoding="UTF-8"?>
<operations xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:mftf:DataGenerator/etc/dataOperation.xsd">
    <operation name="UnityAdminCreateCategory" dataType="adminCategory"
               type="create"
               auth="adminFormKey"
               url="/catalog/category/save"
               method="POST"
               successRegex=""
               returnRegex="~\/catalog\/category\/delete\/id\/(?'val'\d*?)\/~"
    >
        <contentType>application/x-www-form-urlencoded</contentType>
        <field key="store_id">integer</field>
        <field key="parent">integer</field>
        <field key="name">string</field>
        <field key="url_key">string</field>
        <field key="is_active">integer</field>
        <field key="include_in_menu">integer</field>
        <field key="is_anchor">integer</field>
        <field key="description">string</field>
        <field key="display_mode">string</field>
        <field key="default_sort_by">string</field>
        <field key="available_sort_by">string</field>
        <field key="use_config[available_sort_by]">string</field>
        <field key="use_config[default_sort_by]">string</field>
        <field key="use_config[filter_price_range]">string</field>
        <field key="custom_use_parent_settings">integer</field>
        <field key="custom_apply_to_products">integer</field>
    </operation>
</operations>
